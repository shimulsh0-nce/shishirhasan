#include <stdio.h>

int abs_val(int x) {
    return (x < 0) ? -x : x;
}

int main() {
    int n;
    scanf("%d", &n);

    if (n < 2) {
        printf("0");
        return 0;
    }

    int arr[1000];
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Bubble Sort
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (arr[j] > arr[j + 1]) {
                int temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    int minDiff = abs_val(arr[1] - arr[0]);

    for (int i = 2; i < n; i++) {
        int diff = abs_val(arr[i] - arr[i - 1]);
        if (diff < minDiff)
            minDiff = diff;
    }

    printf("%d", minDiff);
    return 0;
}
