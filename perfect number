#include <stdio.h>

// Function to check if a number is a perfect number
// Returns 1 if perfect, 0 otherwise
int isPerfect(int n) {
    if (n <= 0) return 0; // Perfect numbers are positive integers
    
    int sum = 0;
    // Find sum of proper divisors (excluding n itself)
    for (int i = 1; i <= n / 2; i++) {
        if (n % i == 0) {
            sum += i;
        }
    }
    
    return (sum == n) ? 1 : 0;
}

int main() {
    int num;
    
    // Input the number
    printf("Enter a number: ");
    scanf("%d", &num);
    
    // Check and display if it's a perfect number
    if (isPerfect(num)) {
        printf("%d is a perfect number.\n", num);
    } else {
        printf("%d is not a perfect number.\n", num);
    }
    
    return 0;
}
